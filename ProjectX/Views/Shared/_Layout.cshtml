<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="wrapper">
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container" style="width: 940px;">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                        class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                    </a><a class="brand" style="padding: 15px; margin: 0;" href="/">Artist.ic</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="divider-vertical"></li>
                            <li><a href="/member/" style="padding:15px;">Members</a></li>
                            <li class="divider-vertical"></li>
                            <li><a href="#" style="padding:15px;">Projets</a></li>
                            <li class="divider-vertical"></li>
                        </ul>
                        <form class="navbar-search pull-left" action="">
                        <input type="text" class="search-query span2" style="margin-top:5px;" placeholder="Search">
                        </form>
                        <ul class="nav pull-right">
                            <li class="divider-vertical"></li>
                            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@Html.Raw(new ProjectX.Helpers.MemberHelper().GetGravatar("ja1984@gmail.com",ProjectX.Models.ProfileImageSize.Small))" class="img-polaroid" /> Account <span class="badge badge-important">4</span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Profile</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Notifications <span class="badge badge-important pull-right">2</span></a></li>
                                    <li><a href="#">Messages <span class="badge badge-important pull-right">2</span></a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Log off</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!-- /.nav-collapse -->
                </div>
            </div>
        </div>
        <article class="container dropshadow">
            <div class="row-fluid">
                @RenderBody()
            </div>
        </article>
        <div class="push">
        </div>
    </div>
    <div class="footer">
        Hejsan
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
