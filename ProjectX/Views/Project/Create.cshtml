@model ProjectX.Models.Project.ProjectRegisterModel
@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="span8 left">
        <h2>
            Create</h2>
        <fieldset>
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.GitHubName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.GitHubName)
                @Html.ValidationMessageFor(model => model.GitHubName)
            </div>
            <div class="editor-label" style="margin-top:35px;">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description, new { @class = "big" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <p>
                <input type="submit" value="Create" class="btn btn-success" />
            </p>
        </fieldset>
    </div>
    <div class="span4 right">
        <fieldset>
            <legend style="margin-bottom:10px;">  <p style="padding-left:10px; margin:0px 0px 0px;">Minions <span style="font-size:11px;"> - Who do you need?</span></p></legend>
            <ul style="list-style-type:none; padding:3px;">
                <li><span style="font-size:10px; margin-top:-15px; float:right; vertical-align:middle;"> <a href="javascript:void(0);">Whats This <i class="icon-question-sign" style="margin-top:-1px;"></i></a></span></li>
            <div>
                <a href="javascript:void(0);" data-id="0" data-bind="click: addHelper"><li><i class="icon-pencil"></i> Add spot for developer</li></a>
            </div>
            <div>
                <a href="javascript:void(0);" data-id="1" data-bind="click: addHelper"><li><i class="icon-picture"></i> Add spot for designer</li></a>
            </div>
            <div>
                <a href="javascript:void(0);" data-id="2" data-bind="click: addHelper" ><li><i class="icon-eye-open"></i> Add spot for tester</li></a>
            </div>

            </ul>

            <fieldset>
            <legend></legend>
            <ul style="list-style-type:none;" id="Helpers" data-bind="foreach: helpers">
                 <li data-bind="click: removeHelper"><i data-bind="attr: {class : image}"></i> Open spot for a <span data-bind="text:role"></span></li>
            </ul>
            </fieldset>
        </fieldset>
    </div>
}
@section Scripts {


    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/knockout")
    <script src="/Scripts/Createproject.js" type="text/javascript"></script>
    <script type="text/javascript">

 




        $(function () {


            ko.applyBindings(new createModel().viewModel());

        });
 </script>

}
