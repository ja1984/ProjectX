@model ProjectX.Models.ProjectRegisterModel
@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="span8 left">
        <h2>
            Create</h2>
        <fieldset>
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.GitHubName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.GitHubName)
                @Html.ValidationMessageFor(model => model.GitHubName)
            </div>
            
            

            <div class="editor-label">
                @Html.LabelFor(model => model.PlatFormId)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.PlatFormId, new SelectList(ViewBag.Platforms, "Id", "Name"))

            </div>
            
            

            <div class="editor-label">
                @Html.LabelFor(model => model.LanguageId)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.LanguageId, new SelectList(ViewBag.Languages, "Id", "Name"))
                
            </div>
            
            
            
            
            

            <div class="editor-label" style="margin-top:35px;">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description, new { @class = "big" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <p>
                <input type="submit" value="Create" class="btn btn-success" id="submit" />
            </p>
        </fieldset>
    </div>
    <div class="span4 right">
        <fieldset>
            <legend style="margin-bottom:10px;">  <p style="padding-left:10px; margin:0px 0px 0px;">Minions <span style="font-size:11px;"> - Who do you need?</span></p></legend>
            <ul style="list-style-type:none; padding:3px;">
                <li><span style="font-size:10px; margin-top:-15px; float:right; vertical-align:middle;"> <a href="javascript:void(0);" id="toggleInfo">Whats This <i class="icon-question-sign" style="margin-top:-1px;"></i></a></span></li>
            <div>
                <a href="javascript:void(0);" data-id="101" data-bind="click: addHelper"><li><i class="icon-pencil"></i> Add spot for developer</li></a>
            </div>
            <div>
                <a href="javascript:void(0);" data-id="102" data-bind="click: addHelper"><li><i class="icon-picture"></i> Add spot for designer</li></a>
            </div>
            <div>
                <a href="javascript:void(0);" data-id="103" data-bind="click: addHelper" ><li><i class="icon-eye-open"></i> Add spot for tester</li></a>
            </div>

            </ul>

            <fieldset>
            <legend></legend>
                        <div class="alert alert-info alert-block" style="display:none;padding:5px;font-size:10px;">
            <h5 style="margin:0;">Minions</h5>
            Need help with design?<br /> Add a designer spot, need more?<br /> Guess what...</div>
            <ul style="list-style-type:none;" id="Helpers" data-bind="foreach: helpers">
                 <li data-bind="click: removeHelper"><i data-bind="attr: {class : image}"></i> Open spot for a <span data-bind="text:displayRole"></span></li>
            </ul>

            </fieldset>
        </fieldset>
        <input type="hidden" id="hidHelpers" name="Collaborators" data-bind="value: requestedHelpers" />
    </div>
}
@section Scripts {


    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/knockout")
    <script src="/Scripts/Createproject.js" type="text/javascript"></script>
